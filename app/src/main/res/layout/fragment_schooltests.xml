<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.fragments.schooltests.SchooltestsFragment">

    <GridLayout
        android:id="@+id/schooltests_card_layout"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_gravity="center"
        android:alignmentMode="alignMargins"
        android:columnCount="2"
        android:rowCount="1"
        android:padding="14dp"
        android:columnOrderPreserved="false"
        android:visibility="invisible">

        <com.google.android.material.card.MaterialCardView
            android:id="@+id/h1_card"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:layout_margin="10dp"
            android:backgroundTint="@color/cardBackground"
            app:cardCornerRadius="6dp"
            app:cardElevation="5dp">

            <TextView
                android:layout_width="143dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="@string/schooltests_card_hj1"
                android:textAlignment="center"
                android:textSize="15sp"
                android:textStyle="bold"
                app:drawableTint="#FFDA6B"
                android:drawablePadding="10dp"
                app:drawableTopCompat="@drawable/ic_insert_drive_file_black_24dp" />

        </com.google.android.material.card.MaterialCardView>

        <com.google.android.material.card.MaterialCardView
            android:id="@+id/h2_card"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:layout_margin="10dp"
            android:backgroundTint="@color/cardBackground"
            app:cardCornerRadius="6dp"
            app:cardElevation="5dp">

            <TextView
                android:layout_width="143dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="@string/schooltests_card_hj2"
                android:textAlignment="center"
                android:textSize="15sp"
                android:textStyle="bold"
                app:drawableTint="#FFDA6B"
                android:drawablePadding="10dp"
                app:drawableTopCompat="@drawable/ic_insert_drive_file_black_24dp" />

        </com.google.android.material.card.MaterialCardView>

    </GridLayout>

    <Spinner
        android:id="@+id/spinner"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="end" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/schooltests_recycler_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="25dp" />

</FrameLayout>
<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:weightSum="20"
    tools:context=".ui.fragments.home.HomeFragment">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="3">

        <TextView
            android:id="@+id/headerTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="@string/header_text"
            android:textAlignment="center"
            android:textColor="#3C92DD"
            android:textSize="24sp" />
    </RelativeLayout>

    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_gravity="center"
        android:alignmentMode="alignMargins"
        android:columnCount="2"
        android:rowCount="3"
        android:layout_weight="17"
        android:padding="14dp"
        android:columnOrderPreserved="false">

        <com.google.android.material.card.MaterialCardView
            android:id="@+id/timetable_card"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:layout_margin="10dp"
            android:backgroundTint="@color/cardBackground"
            app:cardCornerRadius="6dp"
            app:cardElevation="5dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="@string/timetable_card_text"
                android:textAlignment="center"
                android:textSize="15sp"
                android:textStyle="bold"
                app:drawableTint="#86F672"
                android:drawablePadding="10dp"
                app:drawableTopCompat="@drawable/ic_today_black_24dp" />

        </com.google.android.material.card.MaterialCardView>

        <com.google.android.material.card.MaterialCardView
            android:id="@+id/illness_doc_card"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:layout_margin="10dp"
            android:backgroundTint="@color/cardBackground"
            app:cardCornerRadius="6dp"
            app:cardElevation="5dp">

            <TextView
                android:layout_width="143dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="@string/illness_doc_card_text"
                android:textAlignment="center"
                android:textSize="15sp"
                android:textStyle="bold"
                app:drawableTint="#FFDA6B"
                android:drawablePadding="10dp"
                app:drawableTopCompat="@drawable/ic_insert_drive_file_black_24dp" />

        </com.google.android.material.card.MaterialCardView>

        <com.google.android.material.card.MaterialCardView
            android:id="@+id/food_plan_card"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:layout_margin="10dp"
            android:backgroundTint="@color/cardBackground"
            app:cardCornerRadius="6dp"
            app:cardElevation="5dp">

            <TextView
                android:layout_width="143dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="@string/food_plan_card_text"
                android:textAlignment="center"
                android:textSize="15sp"
                android:textStyle="bold"
                app:drawableTint="#F36D63"
                android:drawablePadding="10dp"
                app:drawableTopCompat="@drawable/ic_restaurant_black_24dp" />

        </com.google.android.material.card.MaterialCardView>

        <com.google.android.material.card.MaterialCardView
            android:id="@+id/subs_card"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:layout_margin="10dp"
            android:backgroundTint="@color/cardBackground"
            app:cardCornerRadius="6dp"
            app:cardElevation="5dp">

            <TextView
                android:layout_width="143dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="@string/substitution_card_text"
                android:textAlignment="center"
                android:textSize="15sp"
                android:textStyle="bold"
                app:drawableTint="#798DFF"
                android:drawablePadding="10dp"
                app:drawableTopCompat="@drawable/ic_view_list_black_24dp" />

        </com.google.android.material.card.MaterialCardView>

        <com.google.android.material.card.MaterialCardView
            android:id="@+id/news_card"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:layout_margin="10dp"
            android:backgroundTint="@color/cardBackground"
            app:cardCornerRadius="6dp"
            app:cardElevation="5dp">

            <TextView
                android:layout_width="143dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="@string/news_card_text"
                android:textAlignment="center"
                android:textSize="15sp"
                android:textStyle="bold"
                app:drawableTint="#D773E8"
                android:drawablePadding="10dp"
                app:drawableTopCompat="@drawable/ic_mail_black_24dp" />

        </com.google.android.material.card.MaterialCardView>

        <com.google.android.material.card.MaterialCardView
            android:id="@+id/custom_card"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:layout_margin="10dp"
            android:backgroundTint="@color/cardBackground"
            app:cardCornerRadius="6dp"
            app:cardElevation="5dp">

            <TextView
                android:layout_width="143dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="@string/hygiene_concept_corona"
                android:textAlignment="center"
                android:textSize="15sp"
                android:textStyle="bold"
                android:drawablePadding="10dp"
                app:drawableTopCompat="@drawable/ic_virus" />

        </com.google.android.material.card.MaterialCardView>

    </GridLayout>


</LinearLayout>
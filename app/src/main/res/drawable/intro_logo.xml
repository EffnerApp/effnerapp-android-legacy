<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <!-- i'm pretty sure it shouldn't be done that way, but it kinda works, so shut up -->
        <shape android:shape="rectangle">
            <padding
                android:bottom="200dp"
                android:top="200dp"
                android:left="200dp"
                android:right="200dp" />
        </shape>
    </item>
    <item>
        <shape android:shape="oval">
            <solid android:color="@android:color/white" />

            <size
                android:width="50dp"
                android:height="50dp" />

            <!-- The app_logo drawable is not square so we have to set the bottom padding to 60dp -->
            <!-- we should set it back to 30 if we create a new logo -->
            <padding
                android:bottom="60dp"
                android:top="30dp"
                android:left="30dp"
                android:right="30dp" />
        </shape>
    </item>
    <item>
        <bitmap android:src="@drawable/ea_rocket" />
    </item>
</layer-list>